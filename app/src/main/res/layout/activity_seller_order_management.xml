<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/polcake"
    tools:context=".ShopOwnerRegistration">

    <TextView
        android:id="@+id/txtps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"

        android:fontFamily="@font/aclonica"
        android:gravity="center_horizontal"
        android:text="ORDER DETAILS"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/darkgray"
        android:textSize="34sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:background="@color/lightgray"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436"
        app:layout_goneMarginLeft="50dp"
        app:layout_goneMarginRight="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name_item_order_T"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="18dp"
                android:text="Item Name"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_item_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Name of the Item"
                android:textColorHint="#575454" />


            <TextView
                android:id="@+id/quantity_order_T"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="20dp"
                android:text="Item Quantity"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/quantity_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Quantity"
                android:inputType="number"
                android:textColorHint="#575454" />


            <TextView
                android:id="@+id/price_order_T"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="20dp"
                android:text="Item Price "
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/price_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Price Of The Item"
                android:inputType="number"
                android:textColorHint="#575454" />

            <Button
                android:id="@+id/calculation_btn"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:background="@color/black"
                android:shadowColor="@color/black"
                android:text="Amount"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:backgroundTint="#5E6FCF" />


            <EditText
                android:id="@+id/totalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_order"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:hint="Total Amount"
                android:inputType="number"
                android:textColorHint="#575454" />


            <TextView
                android:id="@+id/s_name_T"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalAmount"
                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="18dp"
                android:text="Customer Name"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/s_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Customer Name"
                android:textColorHint="#575454" />

            <TextView
                android:id="@+id/s_phone_T"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="18dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/s_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Customer phone number"
                android:inputType="number"
                android:textColorHint="#575454" />

            <TextView
                android:id="@+id/s_address_T"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_phone"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="18dp"
                android:text="Home Address"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/s_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_phone"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Customer Home Address"
                android:textColorHint="#575454" />

            <TextView
                android:id="@+id/description_T"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_address"
                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="18dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/s_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_address"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Add Description"
                android:textColorHint="#575454" />


            <TextView
                android:id="@+id/payment_method_T"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_description"
                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="18dp"
                android:text="Payment Method"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/s_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/s_description"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Payment Method"
                android:textColorHint="#575454" />


            <Button
                android:id="@+id/confirm_order_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/calculation_btn"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/black"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="#489F98" />

            <Button
                android:id="@+id/edit_order_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/calculation_btn"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"

                android:layout_marginTop="20dp"
                android:background="@color/black"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="#489F98" />


            <Button
                android:id="@+id/delete_order_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/calculation_btn"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/black"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:backgroundTint="#489F98" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>