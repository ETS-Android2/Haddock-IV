<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:id="@+id/img1"
            app:civ_border_width="2dp"
            app:civ_border_color="#ff000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemNotext"
            android:textStyle="bold"
            android:text="Item Number"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/cakenametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemNotext"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/img1"
            android:text="Cake name"
            android:textColor="#000"
             />


        <TextView
            android:id="@+id/cpricetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cakenametext"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Price"
            android:textSize="16sp"
            android:textColor="#000" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cquantitytext"
            android:text="Quantity"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/cpricetext"
            android:layout_marginLeft="10dp" />


        <Button
            android:id="@+id/btnOrderNow"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="-109dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/cpricetext"
            android:background="@color/blueish"
            android:text="Order"
            android:textColor="#3E2723"
            app:backgroundTint="#F47951" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>