<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg10"
    tools:context=".ShopOwnerRegistration">


    <ScrollView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/OffWhite"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436"
        app:layout_goneMarginLeft="50dp"
        app:layout_goneMarginRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOrderD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:text="Your Order"
                android:textAlignment="center"
                android:textColor="#010004"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etItemNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtOrderD"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:hint="Item Name"
                android:minHeight="48dp"
                android:textColorHint="#7E7A7A" />

            <EditText
                android:id="@+id/etPriceInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etItemNameInput"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:hint="Price"
                android:minHeight="48dp"
                android:textColorHint="#7E7A7A" />

            <EditText
                android:id="@+id/etQuantityInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPriceInput"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:hint="Quantity(kg)"
                android:minHeight="48dp"
                android:textColorHint="#7E7A7A" />

            <EditText
                android:id="@+id/etTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCakeName"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="20dp"
                android:hint="Total Amount"
                android:inputType="phone"
                android:minHeight="48dp"
                android:textColorHint="#7E7A7A" />

            <Button
                android:id="@+id/btnCalTot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blueish"
                android:text="Calculate Total"
                app:backgroundTint="#570722" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blueish"
                android:text="Next"
                app:backgroundTint="#570722" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>