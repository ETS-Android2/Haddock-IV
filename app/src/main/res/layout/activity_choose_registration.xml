<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chooseregistrationback"
    tools:context=".ChooseRegistration">

    <ImageView
        android:id="@+id/resisterAsLogo"
        android:layout_width="248dp"
        android:layout_height="235dp"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toTopOf="@+id/tvRegisterAs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/haddocklogo" />

    <TextView
        android:id="@+id/tvRegisterAs"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:fontFamily="@font/abhaya_libre_extrabold"
        android:text="@string/registerAs"
        android:textColor="#EFB402"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resisterAsLogo" />

    <Button
        android:id="@+id/btnRegisterAsCustomer"
        android:layout_width="281dp"
        android:layout_height="60dp"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginBottom="152dp"
        android:text="@string/btnRegisterAsCustomer"
        android:textColor="#000000"
        app:backgroundTint="#E6847C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRegisterAs" />

</androidx.constraintlayout.widget.ConstraintLayout>