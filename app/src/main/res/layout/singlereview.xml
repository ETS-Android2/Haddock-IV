<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />

        <TextView
            android:id="@+id/reviewViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Customer Name : "
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Rating" />


        <TextView
            android:id="@+id/reviewViewRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="18dp"
            android:text="Rating : "
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Phone Number" />

        <TextView
            android:id="@+id/reviewViewPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="36dp"
            android:text="Phone Number : "
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:text="Comment" />

        <TextView
            android:id="@+id/reviewViewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="54dp"
            android:text="Comment : "
            android:textColor="#000"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDeleteReview"
            android:layout_width="75dp"
            android:layout_height="48dp"
            android:layout_marginLeft="-75dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/reviewViewComment"
            android:text="Delete"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:backgroundTint="#7758AE" />

        <!--ImageView
            android:id="@+id/image_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-75dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/reviewViewComment"
            app:srcCompat="@drawable/ic_delete" /-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>