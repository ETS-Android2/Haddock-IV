<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/avishcake"
    tools:context=".AddProduct">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="100dp"
        android:background="@color/gray"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="ADD PRODUCT"
            android:textColor="#C3941F"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:foregroundGravity="center" />

        <Button
            android:id="@+id/button_choose_image"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:text="Choose Image"
            app:backgroundTint="#009688" />


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <EditText
            android:id="@+id/cakenoET"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:hint="Item Number"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="218dp" />

        <EditText
            android:id="@+id/cakenameET"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:hint="Item Name"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="218dp" />

        <EditText
            android:id="@+id/cakepriceET"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:baselineAligned="false"
            android:ems="10"
            android:hint="Price"
            android:inputType="textPersonName"
            android:textColor="#A6A0A0"
            android:textColorHint="#FFFFFF"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="288dp" />

        <EditText
            android:id="@+id/cakequantityET"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:baselineAligned="false"
            android:ems="10"
            android:hint="Quantity"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="288dp" />

        <EditText
            android:id="@+id/cakedetailsET"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:hint="Details"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="363dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/btn_caked"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Delete"
                app:backgroundTint="#9A1C21"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_cakeu"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Update"
                app:backgroundTint="#2196F3"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_cakec"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="Submit"
                app:backgroundTint="#4CAF50" />



        </TableRow>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
