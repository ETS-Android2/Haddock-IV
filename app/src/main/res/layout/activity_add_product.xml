<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="680dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="170dp"
        android:background="@color/OffWhite"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/cakeimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            tools:layout_editor_absoluteX="228dp"
            tools:layout_editor_absoluteY="459dp"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/cakenoET"
            android:layout_width="358dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Item Number"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="218dp" />

        <EditText
            android:id="@+id/cakenameET"
            android:layout_width="358dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Item Name"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="218dp" />

        <EditText
            android:id="@+id/cakepriceET"
            android:layout_width="358dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:baselineAligned="false"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Price"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="288dp" />

        <EditText
            android:id="@+id/cakequantityET"
            android:layout_width="358dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:baselineAligned="false"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Quantity"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="288dp" />

        <EditText
            android:id="@+id/cakedetailsET"
            android:layout_width="358dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Details"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="363dp" />

        <Button
            android:id="@+id/btn_cakec"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Submit Product"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="675dp" />

        <Button
            android:id="@+id/btn_caker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View Product"
            android:gravity="center_horizontal"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="675dp" />

        <Button
            android:id="@+id/btn_cakeu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Update Product"
            tools:layout_editor_absoluteX="228dp"
            tools:layout_editor_absoluteY="675dp" />

        <Button
            android:id="@+id/btn_caked"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Delete Product"
            tools:layout_editor_absoluteX="228dp"
            tools:layout_editor_absoluteY="675dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
